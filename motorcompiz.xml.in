<compiz>
	<plugin name="motorcompiz" useBcop="true">
		<_short>MotorCompiz</_short>
		<_long>Adds Support for Motorcar 3D Windowing in Compiz</_long>
		<deps>
			<requirement>
				<plugin>opengl</plugin>
			</requirement>
			<relation type="after">
				<plugin>composite</plugin>
				<plugin>opengl</plugin>
			</relation>
		</deps>
		<options>
			<option name="foo" type="int">
				<_short> Foo </_short>
				<_long> Foobar! </_long>
				<min>0 </min>
				<max> 10 </max>
				<default> 3 </default>
			</option>
		</options>
	</plugin>
</compiz>